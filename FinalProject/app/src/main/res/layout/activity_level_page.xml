<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F69ABE"
    tools:context=".LevelPage">

    <Button
        android:id="@+id/adventuretime"
        android:layout_width="183dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:text="@string/adventure_time"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/Atime" />

    <Button
        android:id="@+id/button7"
        android:layout_width="187dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="@string/total_drama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tdrama" />

    <ImageView
        android:id="@+id/Tdrama"
        android:layout_width="209dp"
        android:layout_height="153dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick"
        app:srcCompat="@drawable/total" />

    <ImageView
        android:id="@+id/Atime"
        android:layout_width="197dp"
        android:layout_height="153dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Tdrama"
        app:layout_constraintTop_toBottomOf="@+id/pick"
        app:srcCompat="@drawable/time" />

    <TextView
        android:id="@+id/pick"
        android:layout_width="243dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=" Pick your show!"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />


</androidx.constraintlayout.widget.ConstraintLayout>